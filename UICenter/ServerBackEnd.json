  "Resources" : {
    "EC2InstanceWithEC2Key" : {
      "Type" : "AWS::EC2::Instance",
      "Condition" : "UseEC2Key",
      "Properties" : {
        "UserData" : { "Fn::Base64" : { "Ref" : "UserData" } },
        "Tags": [ { "Key" : "Name", "Value" : "S3-BigData-Sync-Server" } ],
        "IamInstanceProfile": { "Ref" : "InstanceProfile" },
        "InstanceType" : { "Ref" : "InstanceType" },
        "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
        "KeyName" : { "Ref" : "KeyName" },
        "ImageId" : { "Fn::FindInMap" : [ "AWSRegionArch2AMI", { "Ref" : "AWS::Region" },
                          { "Fn::FindInMap" : [ "AWSInstanceType2Arch", { "Ref" : "InstanceType" }, "Arch" ] } ] }
      }
    },
    
    "EC2InstanceWithoutEC2Key" : {
      "Type" : "AWS::EC2::Instance",
      "Condition" : "NotUseEC2Key",
      "Properties" : {
        "UserData" : { "Fn::Base64" : { "Ref" : "UserData" } },
        "Tags": [ { "Key" : "Name", "Value" : "S3-BigData-Sync-Server" } ],
        "IamInstanceProfile": { "Ref" : "InstanceProfile" },
        "InstanceType" : { "Ref" : "InstanceType" },
        "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
        "ImageId" : { "Fn::FindInMap" : [ "AWSRegionArch2AMI", { "Ref" : "AWS::Region" },
                          { "Fn::FindInMap" : [ "AWSInstanceType2Arch", { "Ref" : "InstanceType" }, "Arch" ] } ] }
      }
    },

    "InstanceSecurityGroup" : {
      "Type" : "AWS::EC2::SecurityGroup",
      "Properties" : {
        "GroupDescription" : "Enable SSH access and Server port 8000 access",
        "SecurityGroupIngress" : 
          [ { "IpProtocol" : "tcp", "FromPort" : "22", "ToPort" : "22", "CidrIp" : { "Ref" : "SSHLocation"} },
            { "IpProtocol" : "tcp", "FromPort" : "8000", "ToPort" : "8000", "CidrIp" : "0.0.0.0/0" }]
      }
    },

    "IPAddress" : {
      "Type" : "AWS::EC2::EIP"
    },

    "IPAssocWithEC2Key" : {
      "Type" : "AWS::EC2::EIPAssociation",
      "Condition" : "UseEC2Key",
      "Properties" : {
        "InstanceId" : { "Ref" : "EC2InstanceWithEC2Key" },
        "EIP" : { "Ref" : "IPAddress" }
      }
    },
    
    "IPAssocWithoutEC2Key" : {
      "Type" : "AWS::EC2::EIPAssociation",
      "Condition" : "NotUseEC2Key",
      "Properties" : {
        "InstanceId" : { "Ref" : "EC2InstanceWithoutEC2Key" },
        "EIP" : { "Ref" : "IPAddress" }
      }
    },
    
    "EC2IAMRole": {
         "Type": "AWS::IAM::Role",
         "Properties": {
            "AssumeRolePolicyDocument": {
               "Version" : "2012-10-17",
               "Statement": [ {
                  "Effect": "Allow",
                  "Principal": {
                     "Service": [{"Fn::If" : [
                        "CNSpecial",
                        "ec2.amazonaws.com.cn",
                        "ec2.amazonaws.com"
                     ]}]
                  },
                  "Action": [ "sts:AssumeRole" ]
               } ]
            },
            "Path": "/",
            "Policies": [ {
               "PolicyName": "s3-big-sync-ec2-role",
               "PolicyDocument": {
                  "Version" : "2012-10-17",
                  "Statement": [ {
                     "Effect": "Allow",
                     "Action": [
                         "dynamodb:*",
                         "s3:*"
                     ],
                     "Resource": "*"
                  } ]
               }
               } ]
            }
      },
      
      "InstanceProfile": {
         "Type": "AWS::IAM::InstanceProfile",
         "Properties": {
            "Path": "/",
            "Roles": [ {
               "Ref": "EC2IAMRole"
            } ]
         }
      }
  },
  "Outputs" : {
    "InstanceIPAddress" : {
      "Description" : "IP address of the newly created EC2 instance",
      "Value" : { "Ref" : "IPAddress" }
    }
  }
